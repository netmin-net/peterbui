<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="utf-8" />
        <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>
        {% include 'partials/metadata.html.twig' %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta name="ROBOTS" content="all" />
        <meta name="ROBOTS" content="noodp" />
        <meta name="author"  content="Bui, Peter"/>
        <link rel="author" href="https://plus.google.com/u/0/117503155223806317120">

        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.ico" />

        {% block stylesheets %}
                {% do assets.addCss('theme://css/skel.css') %}
                {% do assets.addCss('theme://css/style.css') %}
                {% do assets.addCss('theme://css/style-wide.css') %}
                {% do assets.addCss('theme://css/style-noscript.css') %}
                {% if browser.getBrowser == 'msie' and browser.getVersion == 8 %}
                    {% do assets.addCss('theme://css/ie/v8.css') %}
                {% endif %}
                {% if browser.getBrowser == 'msie' and browser.getVersion == 9 %}
                    {% do assets.addCss('theme://css/ie/v9.css') %}
                {% endif %}
        {% endblock %}
        <noscript>
        {{ assets.css() }}
        </noscript>

        {% block javascripts %}
            {% if browser.getBrowser == 'msie' and browser.getVersion == 8 %}
                 {% do assets.addJs('theme://css/ie/html5shiv.js') %}
            {% endif %}
            {% do assets.add('jquery',101) %}

            {% do assets.add('https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js', 101) %}

            {% do assets.addJs('theme://js/jquery.dropotron.min.js') %}
            {% do assets.addJs('theme://js/jquery.scrolly.min.js') %}
            {% do assets.addJs('theme://js/jquery.scrollgress.min.js') %}
            {% do assets.addJs('theme://js/skel.min.js') %}
            {% do assets.addJs('theme://js/skel-layers.min.js') %}
            {% do assets.addJs('theme://js/init.js') %}
        {% endblock %}
        {{ assets.js() }}
        {% endblock head%}
    </head>
    <body class="{{ page.header.body_class }}">

        {% block header %}
            {% include 'partials/header.html.twig' %}
        {% endblock %}

        {% block body %}
            {% block content %}{% endblock %}
        {% endblock %}

        {% block footer %}
            {% include 'partials/footer.html.twig' %}
        {% endblock %}

    </body>
</html>
